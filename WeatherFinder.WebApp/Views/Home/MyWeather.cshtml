@model IEnumerable<WeatherFinder.Models.WeatherForecast>
@{
    ViewData["Title"] = "My Weather";
}
<style>
    hr {
        background: aqua !important;
    }

    .card {
        padding: 20px;
        margin: 5px;
        color: black;
        text-align: left;
        font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;
    }

    .card-text {
        font-size: 1.2em;
    }

    h6 {
        text-align: right;
    }
</style>

<br />
<h1 class="display-3">My Weather</h1>
<br />
<hr />
<form asp-controller="Home" asp-action="MyWeather" method="Get">
    <h2>
        City :
        <input type="text" name="SearchString">
        <input type="submit" value="Filter" />
    </h2>
</form>
<br />
<h3>Total of <b>@Model.Count()</b> records.</h3>
<hr />
<div class="row">

    @foreach (var element in Model)
    {
        <div class="col-md-3">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">City: @element.City</h4>
                    <hr />
                    <p class="card-text">
                        <a href="#" class="card-link">ID: </a>@element.Id
                    </p>
                    <p class="card-text">
                        <a href="#" class="card-link">Summary: </a>@element.Summary
                    </p>
                    <p class="card-text">
                        <a href="#" class="card-link">TemperatureC: </a>@element.TemperatureC
                    </p>
                    <p class="card-text">
                        <a href="#" class="card-link">Humidity: </a>@element.Humidity %
                    </p>
                    <p class="card-text">
                        <a href="#" class="card-link">Pressure: </a>@element.Pressure mb
                    </p>
                    <p class="card-text">
                        <a href="#" class="card-link">Wind: </a>@element.Wind km/h
                    </p>
                    <hr />
                    <h6 class="card-subtitle mb-2 text-muted">
                        <a href="#" class="card-link"> Date: @element.Date </a>
                    </h6>
                </div>
            </div>
        </div>
    }
</div>